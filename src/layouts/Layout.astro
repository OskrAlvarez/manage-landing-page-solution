---
interface Props {
	title?: string;
}

const { title = 'Home'} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content="{Astro.generator}" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  body {
    font-family: "Be Vietnam Pro", sans-serif;
    background-image: url("../svgs/bg-tablet-pattern.svg"),
      url("../svgs/bg-tablet-pattern.svg");
    background-repeat: no-repeat;
    background-size: 800px;
    background-position: 90% -25%, -95% 109%;
  }
  #cta {
    background-image: url("../svgs/bg-simplify-section-desktop.svg");
    background-repeat: no-repeat;
  }

  .swiper {
    overflow: initial;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
  }

  .swiper-pagination > .swiper-pagination-bullet {
    opacity: 1;
    border: hsl(12, 88%, 59%) solid 1px;
    background-color: transparent;
  }
  .swiper-pagination > .swiper-pagination-bullet-active {
    background-color: hsl(12, 88%, 59%);
  }
  @media (max-width: 576px) {
    html {
      overflow-x: hidden;
    }
    body {
      background-position: 50px -50px;
      background-size: 500px;
    }

    #cta {
      background-image: url("../svgs/bg-simplify-section-mobile.svg");
    }
		
  }
</style>
