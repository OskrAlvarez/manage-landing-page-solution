---
import FormMobile from "./Footer/FormMobile.astro";
import SocialsMobile from "./Footer/SocialsMobile.astro";
import LogoMobile from "./Footer/LogoMobile.astro";
---

<footer
  class="bg-veryDarkBlue p-7 flex flex-col space-y-10 md:space-y-0 md:flex-row items-center justify-center md:justify-around"
>
  <div>
    <FormMobile />

    <div class="hidden md:block">
      <img src="./svgs/logo-footer.svg" alt="" />

      <div class="social-links flex items-center space-x-4 mt-4 md:mt-10">
        <!-- Link 1 -->
        <a href="#">
          <img src="svgs/icon-facebook.svg" alt="" class="h-5" />
        </a>
        <!-- Link 2 -->
        <a href="#">
          <img src="svgs/icon-youtube.svg" alt="" class="h-5" />
        </a>
        <!-- Link 3 -->
        <a href="#">
          <img src="svgs/icon-twitter.svg" alt="" class="h-5" />
        </a>
        <!-- Link 4 -->
        <a href="#">
          <img src="svgs/icon-pinterest.svg" alt="" class="h-5" />
        </a>
        <!-- Link 5 -->
        <a href="#">
          <img src="svgs/icon-instagram.svg" alt="" class="h-5" />
        </a>
      </div>
    </div>
  </div>

  <div class="flex gap-28 md:gap-36">
    <div class="flex flex-col gap-2 text-white text-sm md:text-left">
      <a href="#" class="hover:text-brightRed">Home</a>
      <a href="#" class="hover:text-brightRed">Pricing</a>
      <a href="#" class="hover:text-brightRed">Products</a>
      <a href="#" class="hover:text-brightRed">About</a>
    </div>
    <div class="flex flex-col gap-2 text-white text-sm md:text-left">
      <a href="#" class="hover:text-brightRed">Careers</a>
      <a href="#" class="hover:text-brightRed">Community</a>
      <a href="#" class="hover:text-brightRed">Privacy Policy</a>
    </div>
  </div>

  <div>
    <SocialsMobile />
    <LogoMobile />
    <div class="mx-auto hidden md:block">
      <form class="flex gap-2">
        <input
          class="border-none outline-none rounded-full py-2 px-4"
          type="email"
          name="email"
          id="email"
          required
          placeholder="Updates in your inboxâ€¦"
        />
        <button
          class="rounded-full bg-brightRed text-white font-bold px-4 py-2"
        >
          Go
        </button>
      </form>
    </div>
    <p
      class="text-center md:text-right text-darkGrayishBlue text-xs mt-4 md:mt-14"
    >
      Copyright 2020. All Rights Reserved
    </p>
  </div>
</footer>
