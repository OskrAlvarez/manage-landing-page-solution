import Card from "../Card.astro"
import { users } from "../../constans/index";
import NavLink from "../NavLink.astro";
import SwipperUsers from "../SwipperUsers";
---

<section>
  <h2 class="text-center text-3xl my-9 text-darkBlue font-bold">
